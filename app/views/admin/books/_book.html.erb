<tr>
  <td><%= book.id %></td>
  <td><%= link_to book.title, book_path(book) %></td>
  <td><%= book.publisher %></td>
  <td><%= truncate(book.describe, length: 17, separator: ' ') %></td>
  <td><%= book.created_at %></td>
  <td><%= book.author_name %></td>
  <td>
    <%= link_to edit_admin_book_path(book) do %>
      <span><i class="fa fa-edit fa-1px"></i></span>
    <% end %>
  </td>
  <td>
    <%= link_to admin_book_path(book), method: :delete do %>
      <span><i class="fa fa-times fa-1px"></i></span>
    <% end %>
  </td>

</tr>