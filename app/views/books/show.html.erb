<div class="shoes-grid">
  <div class="row show-book">
    <%= image_tag @book.cover_image, class: "cover-image" %>
    <h2><%= @book.title %></h2>
    <span><b>Author: </b>&nbsp</span><%= @book.author_name %><br/>
    <span><b>Publisher: </b>&nbsp</span><%= @book.publisher %><br/>
    <% if current_user %>
      <% if @like.id? %>
        <%= render "likes/unlike" %>
      <% else %>
        <%= render "likes/like" %>
      <% end %>
    <% else %>
      <%= render "likes/like" %>
    <% end %>
    <h4>Rating: </h4>
    <%= rating_for @book, "quality", star: 10, cancel: true, disable_after_rate: false %>
    <h4><i>Describe:</i></h4>
    <p><%= @book.describe %></p>
  </div>
</div>